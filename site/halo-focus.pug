doctype html
html(lang='en-US').spectrum.spectrum--medium
  head
    title Halo Focus - Spectrum CSS

    include includes/dependencies.pug

    -
      var exampleDependencies = [
        'link',
        'toast',
        'tooltip',
        'coachmark',
        'dialog',
        'button',
        'sidenav',
        'menu',
        'barloader',
        'inputgroup',
        'dropdown',
        'slider',
        'toggle',
        'checkbox',
        'radio'
      ];

    each dep in exampleDependencies.filter(dep => dependencyOrder.indexOf(dep) === -1)
      link(rel='stylesheet', type='text/css', href='../components/' + dep + '/index-vars.css', data-dependency=dep)

    style(type="text/css").
      .a-container {
        background-image: url(img/art_bk.jpg);
        background-position: center center;
        background-size: cover;
        height: 100%;
      }
      .a-overlay {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .a-overlay--dark {
        background-color: rgba(21, 21, 21, 0.8);
      }
      .a-overlay--light {
        background-color: rgba(225, 225, 225, 0.8);
      }
      .a-overlay--mid {
        background-color: rgba(100, 100, 100, 0.8);
      }

  body

    div.a-container
      div.a-overlay.spectrum.spectrum--dark
        include templates/halo-focus.pug

      div.a-overlay.a-overlay--dark.spectrum--dark
        include templates/halo-focus.pug

      div.a-overlay.a-overlay--mid.spectrum--dark
        include templates/halo-focus.pug

      div.a-overlay.spectrum--dark
        include templates/halo-focus.pug

      div.a-overlay.spectrum--light
        include templates/halo-focus.pug

      div.a-overlay.a-overlay--mid.spectrum--light
        include templates/halo-focus.pug

      div.a-overlay.a-overlay--light.spectrum--light
        include templates/halo-focus.pug

      div.a-overlay.spectrum.spectrum--light
        include templates/halo-focus.pug
