{% extends './layout.njk' %}
{% block content %}
    <div class="spectrum-Site">
        {% include './header.njk' %}
        <div class="spectrum-Site-content">
            <div class="spectrum-Site-sideBar" id="site-sidebar">
                {% include "./partials/logo.njk" %}
                <div id="site-search"></div>
                <div class="u-scrollable spectrum-Site-nav">
                    <nav>
                        <ul class="spectrum-SideNav spectrum-SideNav--multiLevel">
                            <li class="spectrum-SideNav-item">
                                <a class="spectrum-SideNav-itemLink js-fastLoad" href="get-started.html">Get started</a>
                            </li>
                            <li class="spectrum-SideNav-item">
                                <a class="spectrum-SideNav-itemLink" href="https://github.com/adobe/spectrum-css" target="_blank" rel="noopener">GitHub</a>
                            </li>
                            <li class="spectrum-SideNav-item">
                                <a class="spectrum-SideNav-itemLink" href="#">Components</a>
                                <ul class="spectrum-SideNav spectrum-SideNav--multiLevel">
                                    {% asyncEach component in nav %}
                                    {% if not component.hide %}
                                        <li class="spectrum-SideNav-item {{ 'is-selected' if (pageURL === component.href) }}">
                                            <a
                                                href="/docs/{{ component.href }}"
                                                class="spectrum-SideNav-itemLink {{ 'js-fastLoad' if component.fastLoad === true }}">
                                                {{ component.name }}
                                            </a>
                                        </li>
                                    {% endif %}
                                    {% endeach %}
                                </ul>
                            </li>
                        </ul>
                    </nav>
                    <nav class="spectrum-Site-bottomNav">
                        <ul class="spectrum-SideNav">
                            <li class="spectrum-SideNav-item">
                                <a class="spectrum-SideNav-itemLink" href="https://spectrum.adobe.com" target="_blank" rel="noopener">Spectrum</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="spectrum-Site-mainContent">
                <div class="spectrum-Site-mainContainer">
                    <article class="spectrum-CSSComponent">
                        <div class="spectrum-CSSComponent-switcher">
                            <div class="spectrum-CSS-switcherContainer">
                                <label class="spectrum-FieldLabel spectrum-FieldLabel--sizeM" for="switcher-theme">Theme</label>
                                <button class="spectrum-Picker spectrum-Picker--sizeM spectrum-Picker--quiet" aria-haspopup="true" id="switcher-theme">
                                    <span class="spectrum-Picker-label">Light</span>
                                    <svg class="spectrum-Icon spectrum-UIIcon-ChevronDown100 spectrum-Picker-menuIcon" focusable="false" aria-hidden="true">
                                        <use xlink:href="#spectrum-css-icon-Chevron100"></use>
                                    </svg>
                                </button>
                                <div class="spectrum-Popover spectrum-Popover--bottom spectrum-Picker-popover spectrum-Picker-popover--quiet">
                                    <ul class="spectrum-Menu" role="listbox">
                                        <li class="spectrum-Menu-item is-selected" role="option" tabindex="0" value="light">
                                            <span class="spectrum-Menu-itemLabel">Light</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                        <li class="spectrum-Menu-item" role="option" tabindex="0" value="dark">
                                            <span class="spectrum-Menu-itemLabel">Dark</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                        <li class="spectrum-Menu-item" role="option" tabindex="0" value="darkest">
                                            <span class="spectrum-Menu-itemLabel">Darkest</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="spectrum-CSS-switcherContainer">
                                <label class="spectrum-FieldLabel spectrum-FieldLabel--sizeM" for="switcher-scale">Scale</label>
                                <button class="spectrum-Picker spectrum-Picker--sizeM spectrum-Picker--quiet" aria-haspopup="true" id="switcher-scale">
                                    <span class="spectrum-Picker-label">Medium</span>
                                    <svg class="spectrum-Icon spectrum-UIIcon-ChevronDown100 spectrum-Picker-menuIcon" focusable="false" aria-hidden="true">
                                        <use xlink:href="#spectrum-css-icon-Chevron100"></use>
                                    </svg>
                                </button>
                                <div class="spectrum-Popover spectrum-Popover--bottom spectrum-Picker-popover spectrum-Picker-popover--quiet">
                                    <ul class="spectrum-Menu" role="listbox">
                                        <li class="spectrum-Menu-item is-selected" role="option" aria-selected="true" tabindex="0" value="medium">
                                            <span class="spectrum-Menu-itemLabel">Medium</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                        <li class="spectrum-Menu-item" role="option" tabindex="0" value="large">
                                            <span class="spectrum-Menu-itemLabel">Large</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="spectrum-CSS-switcherContainer">
                                <label class="spectrum-FieldLabel spectrum-FieldLabel--sizeM" for="switcher-theme">Direction</label>
                                <button
                                    class="spectrum-Picker spectrum-Picker--sizeM spectrum-Picker--quiet"
                                    aria-haspopup="true"
                                    id="switcher-direction">
                                    <span class="spectrum-Picker-label">LTR</span>
                                    <svg class="spectrum-Icon spectrum-UIIcon-ChevronDown100 spectrum-Picker-menuIcon" focusable="false" aria-hidden="true">
                                        <use xlink:href="#spectrum-css-icon-Chevron100"></use>
                                    </svg>
                                </button>
                                <div class="spectrum-Popover spectrum-Popover--bottom spectrum-Picker-popover spectrum-Picker-popover--quiet">
                                    <ul class="spectrum-Menu" role="listbox">
                                        <li class="spectrum-Menu-item is-selected" role="option" aria-selected="true" tabindex="0" value="ltr">
                                            <span class="spectrum-Menu-itemLabel">LTR</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                        <li class="spectrum-Menu-item" role="option" tabindex="0" value="rtl">
                                            <span class="spectrum-Menu-itemLabel">RTL</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="spectrum-CSS-switcherContainer">
                                <label class="spectrum-FieldLabel spectrum-FieldLabel--sizeM" for="switcher-theme">Vars Version</label>
                                <button
                                    class="spectrum-Picker spectrum-Picker--sizeM spectrum-Picker--quiet"
                                    aria-haspopup="true"
                                    id="switcher-vars-version">
                                    <span class="spectrum-Picker-label">Default</span>
                                    <svg class="spectrum-Icon spectrum-UIIcon-ChevronDown100 spectrum-Picker-menuIcon" focusable="false" aria-hidden="true">
                                        <use xlink:href="#spectrum-css-icon-Chevron100"></use>
                                    </svg>
                                </button>
                                <div class="spectrum-Popover spectrum-Popover--bottom spectrum-Picker-popover spectrum-Picker-popover--quiet">
                                    <ul class="spectrum-Menu" role="listbox">
                                        <li class="spectrum-Menu-item is-selected" role="option" aria-selected="true" tabindex="0" value="default">
                                            <span class="spectrum-Menu-itemLabel">Default</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                        <li class="spectrum-Menu-item" role="option" tabindex="0" value="express">
                                            <span class="spectrum-Menu-itemLabel">Express</span>
                                            <svg
                                                class="spectrum-Icon spectrum-UIIcon-Checkmark100 spectrum-Menu-checkmark spectrum-Menu-itemIcon"
                                                focusable="false"
                                                aria-hidden="true">
                                                <use xlink:href="#spectrum-css-icon-Checkmark100"></use>
                                            </svg>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <header id="{{ component.slug }}" class="spectrum-CSSComponent-heading">
                            <h1 class="spectrum-CSSComponent-title spectrum-Heading spectrum-Heading--sizeXXXL spectrum-Heading--serif">
                                <a href="{{ component.slug }}" class="spectrum-BigSubtleLink">{{ component.name }}</a>
                            </h1>
                        </header>
                        <table class="spectrum-CSSComponent-detailsTable">
                            <tr>
                                <th class="spectrum-Body--secondary">Component status</th>
                                <td>
                                    <div class="spectrum-StatusLight spectrum-StatusLight--sizeM spectrum-CSSComponent-status spectrum-StatusLight--{{
                                        util.getStatusLightVariant(status) }}">{{ status }}</div>
                                </td>
                            </tr>
                            <tr>
                                <th class="spectrum-Body--secondary">Last released
                                </th>
                                <td>
                                    {{ releaseDate }}
                                </td>
                            </tr>
                            <tr>
                                <th class="spectrum-Body--secondary">Current version
                                </th>
                                <td>
                                    <bdo dir="ltr">{{ pkg.name }}@{{ pkg.version }}</bdo>
                                </td>
                            </tr>
                        </table>
                        <div class="spectrum-CSSComponent-resources">
                            {% if component.SpectrumSiteSlug %}
                                <a
                                    class="spectrum-Card spectrum-Card--sizeS spectrum-Card--horizontal"
                                    href="component.SpectrumSiteSlug"
                                    target="_blank">
                                    <div class="spectrum-Card-preview spectrum-CSSComponent-resource--adobe">
                                        <svg
                                            class="spectrum-Icon spectrum-Icon--sizeXXL"
                                            viewBox="0 0 36 36"
                                            focusable="false"
                                            aria-hidden="true"
                                            aria-label="AdobeLogo">
                                            <path d="M22.175 4H34v28L22.175 4zm-8.336 0H2v28L13.839 4zm4.165 10.317l7.538 17.682h-4.939l-2.258-5.632h-5.517l5.176-12.05z"></path>
                                        </svg>
                                    </div>
                                    <div class="spectrum-Card-body">
                                        <div class="spectrum-Card-header">
                                            <div class="spectrum-Card-title spectrum-Heading spectrum-Heading--sizeXS">View guidelines</div>
                                        </div>
                                        <div class="spectrum-Card-content">
                                            <div class="spectrum-Card-subtitle spectrum-Detail spectrum-Detail--sizeS">Spectrum website</div>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                            <a
                                href="https://github.com/adobe/spectrum-css/tree/main/components/{{ pkg.name.split('/').pop() }}"
                                class="spectrum-Card spectrum-Card--sizeS spectrum-Card--horizontal"
                                target="_blank">
                                <div class="spectrum-Card-preview spectrum-CSSComponent-resource--github">
                                    <svg
                                        class="spectrum-Icon spectrum-Icon--sizeXXL"
                                        focusable="false"
                                        aria-hidden="true"
                                        aria-label="GitHub"
                                        viewBox="0 0 36 36">
                                        <path d="M17.988 2a16.291 16.291 0 0 0-5.147 31.747c.814.149 1.111-.354 1.111-.786
                                            0-.386-.014-1.411-.022-2.77-4.531.984-5.487-2.184-5.487-2.184a4.32 4.32 0 0
                                            0-1.809-2.383c-1.479-1.01.112-.99.112-.99a3.42 3.42 0 0 1 2.495 1.679 3.468 3.468 0 0 0 4.741 1.353 3.482 3.482 0 0 1
                                            1.034-2.177C11.4 25.078 7.6 23.68 7.6 17.438a6.3 6.3 0 0 1 1.677-4.371 5.863 5.863 0 0 1 .16-4.311s1.368-.438 4.479
                                            1.67a15.451 15.451 0 0 1 8.157 0c3.109-2.108 4.475-1.67 4.475-1.67a5.857 5.857 0 0 1 .162 4.311 6.286 6.286 0 0 1 1.674
                                            4.371c0 6.258-3.808 7.635-7.437 8.038a3.888 3.888 0 0 1 1.106 3.017c0 2.177-.02 3.934-.02 4.468 0 .436.293.943
                                            1.12.784A16.292 16.292 0 0 0 17.988 2z"></path>
                                    </svg>
                                </div>
                                <div class="spectrum-Card-body">
                                    <div class="spectrum-Card-header">
                                        <div class="spectrum-Card-title spectrum-Heading spectrum-Heading--sizeXS">View repository</div>
                                    </div>
                                    <div class="spectrum-Card-content">
                                        <div class="spectrum-Card-subtitle spectrum-Detail spectrum-Detail--sizeS">GitHub</div>
                                    </div>
                                </div>
                            </a>
                            <a
                                target="_blank"
                                href='https://www.npmjs.com/package/{{ pkg.name }}'
                                class="spectrum-Card spectrum-Card--sizeS spectrum-Card--horizontal">
                                <div class="spectrum-Card-preview spectrum-CSSComponent-resource--npm">
                                    <svg
                                        class="spectrum-Icon spectrum-Icon--sizeXXL"
                                        viewBox="0 0 18 7"
                                        focusable="false"
                                        aria-hidden="true"
                                        aria-label="npm">
                                        <path
                                            fill="#CB3837"
                                            d="M0,0h18v6H9v1H5V6H0V0z M1,5h2V2h1v3h1V1H1V5z M6,1v5h2V5h2V1H6z M8,2h1v2H8V2z M11,1v4h2V2h1v3h1V2h1v3h1V1H11z"></path>
                                        <polygon fill="#FFFFFF" points="1,5 3,5 3,2 4,2 4,5 5,5 5,1 1,1 "></polygon>
                                        <path fill="#FFFFFF" d="M6,1v5h2V5h2V1H6z M9,4H8V2h1V4z"></path>
                                        <polygon fill="#FFFFFF" points="11,1 11,5 13,5 13,2 14,2 14,5 15,5 15,2 16,2 16,5 17,5 17,1 "></polygon>
                                    </svg>
                                </div>
                                <div class="spectrum-Card-body">
                                    <div class="spectrum-Card-header">
                                        <div class="spectrum-Card-title spectrum-Heading spectrum-Heading--sizeXS">View package</div>
                                    </div>
                                    <div class="spectrum-Card-content">
                                        <div class="spectrum-Card-subtitle spectrum-Detail spectrum-Detail--sizeS">npm</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {% if component.description %}
                            <header class="spectrum-CSSComponent-sectionHeading" id="usage">
                                <h2 class="spectrum-Heading spectrum-Heading--sizeM">
                                    <a class="spectrum-BigSubtleLink" href="#usage">Usage notes</a>
                                </h2>
                                <hr class="spectrum-Divider spectrum-Divider--large"/>
                            </header>
                            <section class="spectrum-CSSComponent-description">
                                <div class="spectrum-Body spectrum-Body--sizeM">
                                    {{ util.markdown.render(component.description) | safe }}
                                </div>
                            </section>
                        {% endif %}
                        {% if component.examples.length %}
                            <header class="spectrum-CSSComponent-sectionHeading" id="variants">
                                <h2 class="spectrum-Heading spectrum-Heading--sizeM">
                                    <a href="#variants" class="spectrum-BigSubtleLink">
                                        {{ component.examplesHeading if component.examplesHeading else "Variants" }}
                                    </a>
                                </h2>
                                <hr class="spectrum-Divider spectrum-Divider--large"/>
                                {% asyncEach example in component.examples %}
                            </header>
                            {% include "./example.njk" %}
                            {% endeach %}
                        {% endif %}
                        {% if component.sections %}
                            {% asyncEach section in component.sections %}
                            {% include "./section.njk" %}
                            {% endeach %}
                        {% endif %}
                    </article>
                </div>
                {% include './footer.njk' %}
            </div>
        </div>
    {% endblock %}
