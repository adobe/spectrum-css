{
	"npmScope": "@spectrum-css",
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": ["build"]
			}
		}
	},
	"targetDefaults": {
		"build": {
			"dependsOn": ["clean", "^build"],
			"inputs": ["{workspaceRoot}/*.css", "{workspaceRoot}/themes/*.css"],
			"outputs": ["{workspaceRoot}/dist/**"]
		},
		"dev": {
			"dependsOn": ["build"]
		},
		"dev:site": {
			"dependsOn": ["clean:docs", "build:components"],
			"inputs": ["{projectRoot}/site/**"],
			"outputs": ["{projectRoot}/dist"]
		}
	},
	"includedScripts": ["build"]
}
