{
  "schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "@spectrum-css",
  "cli": {
    "packageManager": "yarn"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "start"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "{workspaceRoot}/*.css",
        "!{workspaceRoot}/stories/*.js"
      ],
      "outputs": [
        "{workspaceRoot}/dist"
      ]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "implicitDependencies": [
      "@spectrum-css/component-builder",
      "@spectrum-css/component-builder-simple"
    ]
  },
  "includedScripts": ["clean", "dev", "build", "start", "start", "test"]
}
