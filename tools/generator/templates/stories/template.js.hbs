import { html } from 'lit';
import { classMap } from 'lit/directives/class-map.js';
import { ifDefined } from 'lit/directives/if-defined.js';

import "@spectrum-css/{{ name }}";

export const Template = ({
  rootClass = "spectrum-{{ pascalCase name }}",
  size,
	isOpen = true,
	content = [],
  id,
  customClasses = [],
  ...globals
}) => {
	const { express } = globals;

	try {
		if (!express) import(/* webpackPrefetch: true */ "@spectrum-css/{{ name }}/dist/themes/spectrum.css");
		else import(/* webpackPrefetch: true */ "@spectrum-css/{{ name }}/dist/themes/express.css");
	} catch (e) {
		console.warn(e);
	}

  return html`
    <div class=${classMap({
      [rootClass]: true,
      "is-open": isOpen,
      [`${rootClass}--size${size.toUpperCase()}`]: true,
      ...customClasses.reduce((a, c) => ({ ...a, [c]: true }), {}),
    })} id=${ifDefined(id)}>
        <!-- Component mark-up goes here -->
				${content.map((c) => {
					const { template, ...props } = c;
					return template({ ...props, ...globals });
				})}
    </div>
  `;
}
