{
    "color-slider-control-track-width": {
        "component": "color-slider",
        "$schema": "https://opensource.adobe.com/spectrum-tokens/schemas/token-types/alias.json",
        "value": "{color-control-track-width}"
    },
    "color-slider-border-color": {
        "component": "color-slider",
        "$schema": "https://opensource.adobe.com/spectrum-tokens/schemas/token-types/alias.json",
        "value": "color-mix(in sRGB, {gray-400} {color-slider-border-opacity}, transparent)",
        "sets": {
            "whcm": {
                "$schema": "https://opensource.adobe.com/spectrum-tokens/schemas/token-types/color.json",
                "value": "CanvasText"
            }
        }
    },
    "color-slider-border-color-disabled": {
