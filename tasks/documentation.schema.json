{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "anyOf": [
      {
        "$ref": "https://json.schemastore.org/jsonld#"
      }
    ],
    "title": "JSON schema for Spectrum CSS documentation",
    "type": "object",
    "version": "1",
    "description": "A validation schema for the Spectrum CSS documentation data.",
    "properties": {
      "title": {
        "type": "string",
        "description": "The human-readable title for the element."
      },
      "status": {
        "type": "string",
        "description": "The design status of the element.",
        "enum": ["Verified", "Experimental", "Deprecated", "Contribution", "Beta"]
      },
      "description":{
        "type": "string",
        "description": "A short description of the element."
      },
      "sections": {
        "description": "An array of sections that document the element.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "The title for the section."
            },
            "description":{
              "type": "string",
              "format": "markdown",
              "description": "The content of the section."
            }
          },
          "required": ["title"]
        }
      },
      "examples": {
        "description": "An array of example objects.",
        "oneOf": [{
          "type": "array",
          "items": {
            "oneOf": [{
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "The unique identifier to use for this example set."
                },
                "title": {
                  "type": "string",
                  "description": "The specific human-readable title for the example set."
                },
                "markup": {
                  "description": "The HTML markup for the example.",
                  "oneOf": [
                    {
                      "type": "string",
                      "format": "html"
                    },
                    {
                      "type": "string",
                      "format": "markdown"
                    }, {
                      "type": "array",
                      "items": {
                        "oneOf": [{
                          "type": "object",
                          "properties": {
                            "title": {
                              "type": "string",
                              "description": "The title for the section."
                            },
                            "group":{
                              "type": "array",
                              "description": "The content of the section.",
                              "items": [
                                {
                                  "type": "string",
                                  "format": "html"
                                },
                                {
                                  "type": "string",
                                  "format": "markdown"
                                }
                              ]
                            }
                          }
                        },{
                          "type": "string",
                          "format": "html"
                        },
                        {
                          "type": "string",
                          "format": "markdown"
                        }]
                      }
                    }
                  ]
                }
              },
              "required": ["id", "title", "markup"]
            },{
              "type": "string",
              "format": "markdown"
            }]
          }
        }, {
          "type": "string",
          "format": "markdown"
        }]
      },
      "designLink": {
        "type": "string",
        "format": "uri",
        "description": "The URL for the Spectrum design specifications for this element."
      },
      "SWC": {
        "type": "object",
        "description": "The matching Spectrum Web Component details.",
        "properties": {
          "tag": {
            "type": "string",
            "description": "The tag name for the Spectrum Web Component."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "The URL to the Spectrum Web Component documentation."
          }
        }
      }
    },
    "required": ["title"]
  }
