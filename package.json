{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "yarn build:docs",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --output-style dynamic --all -t build --exclude @spectrum-css/{preview,documentation}",
    "build:docs": "lerna run --include-dependencies --scope @spectrum-css/documentation build",
    "postbuild:docs": "yarn copy:docs",
    "build:preview": "nx build @spectrum-css/preview",
    "postbuild:preview": "yarn copy:preview",
    "cache:clean": "nx reset",
    "ci": "yarn build:all",
    "ci:storybook": "nx storybook @spectrum-css/preview",
    "clean": "run-p clean:*",
    "clean:components": "lerna exec --stream --parallel --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,documentation,generator}\" -- rimraf dist",
    "clean:docs": "nx run @spectrum-css/documentation:clean",
    "clean:preview": "nx run @spectrum-css/preview:clean",
    "clean:root": "rimraf dist",
    "copy": "run-s copy:docs copy:preview",
    "copy:docs": "[[ -d 'dist' ]] && mkdir -p dist && cp -r site/dist dist || exit 0",
    "copy:preview": "[[ -d 'dist/preview' ]] && mkdir -p dist/preview && cp -r tools/preview/storybook-static dist/preview || exit 0",
    "dev": "NODE_ENV=development run-s build:components start",
    "dev:docs": "nx run @spectrum-css/documentation:dev",
    "lint": "run-p lint:*",
    "lint:components": "node ./tasks/packageLint.js",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:docs": "yarn build:all",
    "release:docs": "yarn copy && gh-pages -d dist/ -f -e .",
    "start": "nx run @spectrum-css/preview:start",
    "test": "nx test @spectrum-css/preview",
    "test:scope": "nx test:scope @spectrum-css/preview",
    "update:tokens": "nx run-many -t update -p @spectrum-css/vars,@spectrum-css/expressvars",
    "version:build": "yarn build:components",
    "watch": "lerna watch --include-dependencies -- 'lerna run --scope $LERNA_PACKAGE_NAME --include-dependents --stream build'",
    "watch:components": "lerna watch --include-dependencies --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,documentation,generator}\" -- 'lerna run --scope $LERNA_PACKAGE_NAME --include-dependents --stream build'",
    "watch:docs": "lerna watch --include-dependencies --scope @spectrum-css/documentation -- 'lerna run --scope $LERNA_PACKAGE_NAME --include-dependents --stream build'",
    "watch:preview": "lerna watch --include-dependencies --scope @spectrum-css/preview -- 'lerna run --scope $LERNA_PACKAGE_NAME --include-dependents --stream build'"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "site"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "fast-glob": "^3.2.12",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "nx": "^15.9.2",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.0",
    "semver": "^7.5.0",
    "yargs": "^17.7.1"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "node ./tasks/packageLint.js",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
