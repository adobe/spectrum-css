{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "nx run-many --projects tag:component --target build",
    "cache:clean": "nx reset",
    "clean": "nx run-many --projects tag:component --target clean",
    "dev": "nx dev site",
    "format": "nx run-many --projects tag:component --target format",
    "lint": "nx run-many --projects tag:component --target lint",
    "lint:tools": "nx run-many --projects tag:tooling --target lint",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepublish:site": "nx build site",
    "publish:site": "gh-pages -d dist/ -f -e .",
    "prerelease": "nx affected --target build",
    "release": "lerna publish --no-private",
    "release:beta": "lerna publish from-package --no-private --preid beta --pre-dist-tag beta --conventional-prerelease",
    "release:from-package": "lerna publish from-package --no-private",
    "start": "nx start storybook",
    "storybook": "nx build storybook",
    "test": "nx run-many test --projects tag:component",
    "test:plugins": "nx run-many --projects tag:postcss --target test",
    "watch": "nx watch --projects tag:component --includeDependentProjects -- nx build \\$NX_PROJECT_NAME"
  },
  "workspaces": [
    "components/*",
    "plugins/conventional-changelog-spectrum",
    "plugins/*",
    "plugins/*",
    "tokens",
    "ui-icons",
    "site",
    "storybook"
  ],
  "devDependencies": {
    "@adobe/spectrum-css-workflow-icons": "^1.2.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@csstools/postcss-design-tokens": "^3.1.1",
    "@nx/eslint-plugin": "^16.9.1",
    "@nx/js": "16.9.1",
    "@nx/node": "16.9.1",
    "@nx/storybook": "^16.9.1",
    "@nxkit/style-dictionary": "^3.0.2",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/vars": "^9.0.8",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.15",
    "c8": "^8.0.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.8.0",
    "fast-glob": "^3.3.1",
    "fuzzy-matching": "^0.4.3",
    "gh-pages": "^5.0.0",
    "glob-concat-cli": "^1.0.1",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nx": "16.9.1",
    "postcss": " ^8.4.30",
    "postcss-cli": " ^10.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-dir-pseudo-class": "^8.0.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-discard-empty": "^6.0.0",
    "postcss-each": "^1.1.0",
    "postcss-extend-rule": "^4.0.0",
    "postcss-hover-media-feature": "^1.0.2",
    "postcss-import": "^15.1.0",
    "postcss-licensing": "^1.0.1",
    "postcss-merge-rules": "^6.0.1",
    "postcss-nesting": "^12.0.1",
    "postcss-preset-env": "^9.1.4",
    "postcss-sorting": "^8.0.2",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^3.0.3",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.4",
    "style-dictionary": "^3.8.0",
    "style-dictionary-sets": "^2.3.0",
    "stylelint": "^15.10.3",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-high-performance-animation": "^1.9.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "stylelint-use-logical": "^2.1.0",
    "typescript": "^5.2.2",
    "wallace-cli": "^3.0.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14 <=18.x"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "package.json": [
      "eslint --fix --quiet",
      "prettier-package-json --write"
    ],
    "*.css": [
      "stylelint --fix --quiet",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.js,*.json": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  }
}
