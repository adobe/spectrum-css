{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Chandra <rajrock38@gmail.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "lerna run --include-dependencies --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" build",
    "postbuild": "lerna exec --include-dependencies --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" -- 'node ${LERNA_ROOT_PATH}/tasks/mod-extractor.js \\$LERNA_PACKAGE_NAME'",
    "build:docs": "lerna run --include-dependencies --scope @spectrum-css/documentation build",
    "build:preview": "lerna run --include-dependencies --scope @spectrum-css/preview build",
    "ci": "lerna run --include-dependencies --scope @spectrum-css/documentation build",
    "ci:storybook": "lerna run --include-dependencies --scope @spectrum-css/preview storybook",
    "clean": "lerna run --include-dependencies --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,generator}\" clean",
    "dev": "lerna run --include-dependencies --scope \"@spectrum-css/{preview,documentation}\" watch,start",
    "lint": "lerna exec --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" -- 'node ${LERNA_ROOT_PATH}/tasks/packageLint.js \\$LERNA_PACKAGE_NAME'",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepublish:docs": "yarn build:docs",
    "publish:docs": "gh-pages -d dist/ -f -e .",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "release:beta-from-package": "lerna publish from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "test": "yarn workspace @spectrum-css/preview test",
    "test:scope": "yarn workspace @spectrum-css/preview test:scope",
    "watch": "lerna watch --include-dependencies --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" -- lerna run build --scope \\$LERNA_PACKAGE_NAME --include-dependents"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "site"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "chalk": "^4.0.0",
    "fast-glob": "^3.2.12",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "nx": "^15.9.2",
    "postcss": "^8.4.22",
    "prettier-package-json": "^2.8.0",
    "readline": "^1.3.0",
    "rimraf": "^5.0.0",
    "semver": "^7.4.0",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "lint-staged": {
    "components/*/package.json": [
      "node ./tasks/packageLint.js",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
