{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Chandra <rajrock38@gmail.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:components build:site build:preview mv:preview",
    "build:clean": "run-s clean build",
    "build:components": "lerna run --scope \"${SCOPE:-@spectrum-css/*}\" --ignore \"@spectrum-css/{*-builder*,preview,generator}\" build",
    "postbuild:components": "yarn docs:mod",
    "prebuild:docs": "yarn workspace @spectrum-css/documentation clean",
    "build:docs": "yarn workspace @spectrum-css/documentation build",
    "build:preview": "lerna run --scope @spectrum-css/preview build --",
    "check:peerDeps": "node ./tasks/checkPeerDependencies.js ./components",
    "ci:storybook": "yarn workspace @spectrum-css/preview storybook",
    "ci-all": "yarn build:all",
    "clean": "gulp clean",
    "dev": "run-p dev:*",
    "dev:components": "gulp watch",
    "predev:docs": "gulp buildDocs",
    "dev:docs": "yarn workspace @spectrum-css/documentation run dev",
    "docs:mod": "node tasks/mod-extractor.js",
    "lint:components": "node ./tasks/packageLint.js",
    "mv:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "release:site": "gulp prepareSite && gh-pages -d dist-site/ -f -e .",
    "prestart": "lerna run --scope \"${SCOPE:-@spectrum-css/*}\" --ignore \"@spectrum-css/{*-builder*,preview,generator}\" build",
    "start": "NODE_ENV=development yarn workspace @spectrum-css/preview start",
    "test": "lerna run --scope @spectrum-css/preview test",
    "test:scope": "lerna run --scope @spectrum-css/preview test:scope",
    "version:build": "lerna run --since origin/main build",
    "watch": "gulp watch"
  },
  "workspaces": [
    "components/*",
    "tools/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "del": "^5.1.0",
    "gh-pages": "^5.0.0",
    "gulp": "^4.0.0",
    "gulp-replace": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "nx": "^15.9.2",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.0",
    "semver": "^7.4.0",
    "through2": "^3.0.1",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
