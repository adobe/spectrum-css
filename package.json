{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Chandra <rajrock38@gmail.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:components build:site build:preview mv:preview",
    "build:clean": "run-s clean:components build",
    "build:components": "lerna run --include-dependencies --scope \"${SCOPE:-${npm_package_config_scope}}\" --ignore \"${npm_package_config_ignore}\" build",
    "postbuild:components": "yarn docs:mod",
    "prebuild:docs": "yarn workspace @spectrum-css/documentation clean",
    "build:docs": "yarn workspace @spectrum-css/documentation build",
    "build:preview": "yarn workspace @spectrum-css/preview build",
    "build:tokens": "lerna run --include-dependencies --scope \"@spectrum-css/{tokens,*vars}\" build",
    "check:peerDeps": "node ./tasks/checkPeerDependencies.js ./components",
    "ci-all": "yarn build:all",
    "clean": "run-p clean:*",
    "clean:components": "lerna exec --stream --scope \"${SCOPE:-$npm_package_config_scope}\" --ignore \"${npm_package_config_ignore}\" -- rimraf dist",
    "clean:docs": "yarn workspace @spectrum-css/documentation clean",
    "clean:preview": "rimraf dist/preview",
    "dev": "NODE_ENV=development run-p dev:components dev:preview",
    "dev:components": "yarn watch:components",
    "dev:docs": "yarn workspace @spectrum-css/documentation run dev",
    "dev:preview": "yarn workspace @spectrum-css/preview start",
    "docs:mod": "node tasks/mod-extractor.js",
    "postinstall": "yarn build:tokens",
    "lint:components": "node ./tasks/packageLint.js",
    "mv:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "release:docs": "gulp prepareSite && gh-pages -d dist-site/ -f -e .",
    "start": "yarn dev:preview",
    "test": "yarn workspace @spectrum-css/preview test",
    "test:scope": "yarn workspace @spectrum-css/preview test:scope",
    "version:build": "SCOPES=($(lerna changed)) && IFS=, SCOPE=\"${SCOPES[*]}\" && [[ \"${#SCOPES[@]}\" -gt 1 ]] && SCOPE=\"{${SCOPE}}\" yarn build",
    "watch": "run-p watch:*",
    "watch:components": "lerna watch -- yarn build:components",
    "watch:docs": "lerna watch -- yarn build:docs",
    "watch:preview": "lerna watch -- yarn build:preview"
  },
  "config": {
    "ignore": "@spectrum-css/{tokens,*vars,*-builder*,preview,generator,documentation}",
    "scope": "@spectrum-css/*"
  },
  "workspaces": [
    "components/*",
    "tools/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "gh-pages": "^5.0.0",
    "gulp": "^4.0.0",
    "gulp-replace": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^4.1.1",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
