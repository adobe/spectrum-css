{
    "private": true,
    "name": "spectrum-css-monorepo",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "author": "Adobe",
    "homepage": "https://opensource.adobe.com/spectrum-css/",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-css.git"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-css/issues"
    },
    "scripts": {
        "build": "nx run-many --target build --projects ",
        "build:lib": "yarn build tag:component",
        "cache:clean": "nx reset",
        "ci": "yarn build tag:component --configuration ci",
        "clean": "nx run-many --target clean --skip-nx-cache --projects ",
        "clean:lib": "yarn clean tag:component",
        "dev": "nx dev site",
        "format": "nx run-many --target format --projects ",
        "format:lib": "yarn format tag:component",
        "format:tools": "yarn format tag:tooling",
        "lint": "nx run-many --target lint --projects ",
        "lint:lib": "yarn lint tag:component",
        "lint:tools": "yarn lint tag:tooling",
        "new": "nx run generator:new",
        "precommit": "lint-staged",
        "prepare": "husky install",
        "prepublish:site": "nx build site",
        "publish:site": "gh-pages -d dist/ -f -e .",
        "prerelease": "nx affected --target build",
        "release": "lerna publish --no-private",
        "release:beta": "lerna publish from-package --no-private --preid beta --pre-dist-tag beta --conventional-prerelease",
        "release:from-package": "lerna publish from-package --no-private",
        "start": "nx dev storybook",
        "storybook": "nx build storybook",
        "test": "nx run-many --target test --projects ",
        "test:lib": "yarn test tag:component",
        "test:plugins": "yarn test tag:postcss,tag:stylelint",
        "test:tools": "yarn test tag:tooling",
        "watch": "nx watch --projects tag:component --includeDependentProjects -- nx build \\$NX_PROJECT_NAME"
    },
    "workspaces": [
        ".github/actions/*",
        "components/*",
        "plugins/*",
        "tokens",
        "ui-icons",
        "site",
        "storybook",
        "generator"
    ],
    "devDependencies": {
        "@adobe/spectrum-css-workflow-icons": "^1.2.1",
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@nx/eslint-plugin": "^16.10.0",
        "@spectrum-css/expressvars": "^3.0.9",
        "@spectrum-css/vars": "^9.0.8",
        "@swc-node/register": "^1.6.8",
        "@swc/core": "^1.3.93",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "autoprefixer": "^10.4.16",
        "c8": "^8.0.1",
        "cssnano": "^6.0.1",
        "cssnano-preset-lite": "^3.0.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "gh-pages": "^6.0.0",
        "glob-concat-cli": "^1.0.1",
        "husky": "^8.0.3",
        "lerna": "^7.3.0",
        "lint-staged": "^14.0.1",
        "lodash": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "nx": "^16.9.1",
        "postcss": " ^8.4.31",
        "postcss-autocorrect": "^1.3.2",
        "postcss-cli": " ^10.1.0",
        "postcss-combine-duplicated-selectors": "^10.0.3",
        "postcss-combine-media-query": "^1.0.1",
        "postcss-discard-comments": "^6.0.0",
        "postcss-discard-empty": "^6.0.0",
        "postcss-each": "^1.1.0",
        "postcss-extend-rule": "^4.0.0",
        "postcss-import": "^15.1.0",
        "postcss-licensing": "^1.0.1",
        "postcss-merge-rules": "^6.0.1",
        "postcss-nesting": "^12.0.1",
        "postcss-preset-env": "^9.1.4",
        "postcss-sorting": "^8.0.2",
        "postcss-value-parser": "^4.2.0",
        "prettier": "^3.0.3",
        "prettier-package-json": "^2.8.0",
        "rimraf": "^5.0.5",
        "semver": "^7.5.4",
        "stylelint": "^15.10.3",
        "stylelint-config-clean-order": "^5.2.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-high-performance-animation": "^1.9.0",
        "stylelint-selector-bem-pattern": "^3.0.1",
        "stylelint-use-logical": "^2.1.0",
        "typescript": "^5.2.2",
        "wallace-cli": "^3.0.0",
        "yargs": "^17.7.2"
    },
    "engines": {
        "node": ">=18"
    },
    "browserslist": [
        "last 2 Edge versions",
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Safari versions",
        "last 2 iOS versions"
    ],
    "lint-staged": {
        "package.json": [
            "prettier-package-json --write --tab-width 4",
            "eslint --no-error-on-unmatched-pattern --fix --quiet"
        ],
        "*.css": [
            "prettier --write",
            "stylelint --fix --quiet"
        ],
        "*.md": [
            "prettier --write"
        ],
        "*.js,*.json": [
            "prettier --write",
            "eslint --fix --quiet"
        ]
    }
}
