{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Singh",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "nx run-many --all --target clean,build",
    "build:components": "nx run-many --projects tag:components --target build",
    "build:preview": "nx build @spectrum-css/preview",
    "build:site": "nx build @spectrum-css/documentation",
    "cache:clean": "nx reset",
    "ci": "nx run-many --all --target build",
    "ci:storybook": "nx storybook @spectrum-css/preview",
    "dev": "yarn start",
    "dev:site": "run-p watch:components start:site",
    "lint": "run-p lint:*",
    "lint:components": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint",
    "new": "nx new @spectrum-css/generator",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepare:site": "nx run --projects @spectrum-css/preview --target clean,build",
    "postprepare:site": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "start": "nx start @spectrum-css/preview",
    "start:site": "nx run --projects @spectrum-css/documentation --target dev",
    "test": "nx test @spectrum-css/preview",
    "test:scope": "nx test:scope @spectrum-css/preview",
    "update:tokens": "nx run-many --output-style dynamic --target update --projects tag:token",
    "watch": "nx watch --all --exclude tags:build -- \"nx run \\$NX_PROJECT_NAME:build\""
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "site",
    "plugins/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "fast-glob": "^3.2.12",
    "gh-pages": "^5.0.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "nx": "^16.2.2",
    "postcss": "^8.4.23",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.5.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "node ./tasks/packageLint.js",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
